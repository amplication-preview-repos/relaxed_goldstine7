datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ResetPassword {
  confirmPassword String?
  createdAt       DateTime @default(now())
  email           String?
  id              String   @id @default(cuid())
  newPassword     String?
  updatedAt       DateTime @updatedAt
}

model Login {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  password  String?
  updatedAt DateTime @updatedAt
}

model Register {
  confirmPassword String?
  createdAt       DateTime @default(now())
  email           String?
  firstName       String?
  id              String   @id @default(cuid())
  lastName        String?
  password        String?
  updatedAt       DateTime @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
